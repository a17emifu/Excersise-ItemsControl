      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Excersise_ItemsControl.Views"
      xmlns:uc ="clr-namespace:Excersise_ItemsControl.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
