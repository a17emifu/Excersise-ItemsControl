<Page x:Class="Excersise_ItemsControl.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Excersise_ItemsControl"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="KEYBOARD" Grid.Row="0"></Label>
        <TextBlock Grid.Row="0" Text="{Binding Letter}" HorizontalAlignment="Center" FontSize="36"></TextBlock>
        <local:LetterKeyboardUC Grid.Row="1" DataContext="{Binding KeyBoardViewModel}"></local:LetterKeyboardUC>
    </Grid>
</Page>
